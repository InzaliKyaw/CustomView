<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width= "match_parent"
    android:layout_height="200dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <TextView
                android:id="@+id/taskState"
                android:layout_width= "wrap_content"
                android:layout_height="wrap_content"
                android:text="In progress"
                android:textSize="14dp"
                android:layout_marginLeft="@dimen/card_margin_left"
                android:layout_weight="1"
                >
            </TextView>
            <TextView
                android:id="@+id/taskCategory"
                android:layout_width= "wrap_content"
                android:layout_height="wrap_content"
                android:text="In progress"
                android:textSize="14dp"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_marginRight="20dp">

            </TextView>

        </LinearLayout>
        <TextView
            android:id="@+id/pageType"
            android:layout_width= "wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_margin_left"
            android:text="In progress"
            android:textSize="24dp">

        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/card_margin_left"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="2dp"
                android:layout_marginLeft="@dimen/card_margin_left"
                android:src="@drawable/ic_message">

            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="12dp"
                android:layout_marginRight="10dp">
            </TextView>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="3dp"
                android:src="@drawable/ic_paperclip">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="12dp"
                android:textAlignment="center">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="14dp"
                android:text="N163"
                >
            </TextView>
            <com.example.customviewassignment.views.component.RoundedImageView
                android:id="@+id/imageRoundTwo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="right"
                android:scaleType="fitCenter"
                android:src="@drawable/lensball"
                app:cornerRadius="20dp">

            </com.example.customviewassignment.views.component.RoundedImageView>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>


